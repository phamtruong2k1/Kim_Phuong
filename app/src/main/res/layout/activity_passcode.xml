<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.more.PasscodeActivity">

    <LinearLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/color_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/ic_back"
            android:layout_gravity="center"
            android:padding="@dimen/_15sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/inter_500"
            android:gravity="center_vertical"
            android:text="Set passcode"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/ic_more_lock"
            android:layout_marginBottom="@dimen/_24sdp"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your passcode"
            android:textSize="@dimen/_20ssp"
            android:fontFamily="@font/inter_500"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_16sdp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/passcode1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_radio_button_unchecked"
                android:layout_marginHorizontal="@dimen/_4sdp"/>

            <ImageView
                android:id="@+id/passcode2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_radio_button_unchecked"
                android:layout_marginHorizontal="@dimen/_4sdp"/>

            <ImageView
                android:id="@+id/passcode3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_radio_button_unchecked"
                android:layout_marginHorizontal="@dimen/_4sdp"/>

            <ImageView
                android:id="@+id/passcode4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_radio_button_unchecked"
                android:layout_marginHorizontal="@dimen/_4sdp"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_22sdp"
            android:layout_weight="1"
            android:weightSum="3">

            <TextView
                android:id="@+id/number1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_700"
                android:gravity="center"
                android:text="1"
                android:textColor="#333333"
                android:textSize="@dimen/_24ssp" />

            <TextView
                android:id="@+id/number2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_700"
                android:gravity="center"
                android:text="2"
                android:textColor="#333333"
                android:textSize="@dimen/_24ssp" />

            <TextView
                android:id="@+id/number3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_700"
                android:gravity="center"
                android:text="3"
                android:textColor="#333333"
                android:textSize="@dimen/_24ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_22sdp"
            android:layout_weight="1"
            android:weightSum="3">

            <TextView
                android:id="@+id/number4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:fontFamily="@font/inter_700"
                android:gravity="center"
                android:text="4"
                android:textColor="#333333"
                android:textSize="@dimen/_24ssp" />

            <TextView
                android:id="@+id/number5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:fontFamily="@font/inter_700"
                android:gravity="center"
                android:text="5"
                android:textColor="#333333"
                android:textSize="@dimen/_24ssp" />

            <TextView
                android:id="@+id/number6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:fontFamily="@font/inter_700"
                android:gravity="center"
                android:text="6"
                android:textColor="#333333"
                android:textSize="@dimen/_24ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_22sdp"
            android:layout_weight="1"
            android:weightSum="3">

            <TextView
                android:id="@+id/number7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_700"
                android:gravity="center"
                android:text="7"
                android:textColor="#333333"
                android:textSize="@dimen/_24ssp" />

            <TextView
                android:id="@+id/number8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_700"
                android:gravity="center"
                android:text="8"
                android:textColor="#333333"
                android:textSize="@dimen/_24ssp" />

            <TextView
                android:id="@+id/number9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_700"
                android:gravity="center"
                android:text="9"
                android:textColor="#333333"
                android:textSize="@dimen/_24ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:layout_weight="1"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_700"
                android:gravity="center"
                android:text="4"
                android:textColor="#333333"
                android:textSize="@dimen/_24ssp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/number0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_700"
                android:gravity="center"
                android:text="0"
                android:textColor="#333333"
                android:textSize="@dimen/_24ssp" />

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_700"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/ic_delete_passcode"
                android:textColor="#333333"
                android:textSize="@dimen/_24ssp" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>